{% extends ('base.twig') %}

{% block content %}


            <div class="container">
                <div class="edit-entry">
                    <h2>Edit Entry</h2>
                    <form method='post'>
                        <input type="hidden" name="csrf_name" value="{{ csrf.csrf_name }}">
                        <input type="hidden" name="csrf_value" value="{{ csrf.csrf_value }}">
                        <label for="title"> Title</label>
                        <input type="text" name="title" value="{{ post.title }}"><br>
                        <label for="entry">Entry</label>
                        <textarea rows="5" name="entry">{{ post.body }}</textarea>
                        <label for="tags">Tags</label>
                        <input type="text" name="tags" value="{% for tag in tags %}{{ tag.tags }}{% endfor %}">
                        <input type="submit" value="Save Entry" class="button">
                        <a href="#" class="button button-secondary">Cancel</a>
                    </form>
                </div>

                {% endblock %}
   