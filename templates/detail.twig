{% extends "base.twig" %}

{% block content %}


            <div class="container">

                <div class="entry-list single">
                    <article>
                        <h1>{{ post.title }}</h1>
                        <time datetime="2016-01-31 1:00">{{ post[0].date}}</time>
                        <div class="entry">
                            <p>{{ post.body }} </p>

                            {% if tags is not empty %}
                            <h4>Tags</h4>
                            {% endif %} 
                          
                            {% for tag in tags %}
                        <span>{{ tag.tags }} </span>
                        {% endfor %}
                            <p><a class="link" href="{{ path_for('edit') }}{{args.id }}">Edit Entry</a></p>
                        </div>
                        
                        
                    </article>
                </div>
            </div>
        </section>
        <section class="entry-comments">
            <div class="container">
                    <h2>Comments</h2>
                    <div class="comment">
                        {% for comment in comments %}
                        <strong>{{ comment.name }}</strong>
                        <time datetime="2016-01-31 1:00">{{ comment.date }}</time>
                        <p>{{ comment.body }}</p>
                        {% endfor %}
                    </div>
                    <div class="new-comment">
                        <form method='post'>
                            <input type="hidden" name="csrf_name" value="{{ csrf.csrf_name }}">
                            <input type="hidden" name="csrf_value" value="{{ csrf.csrf_value }}">
                              <label for="name"> Name</label>
                              <input type="text" name="name"><br>
                              <label for="comment">Comment</label>
                              <textarea rows="5" name="comment"></textarea>
                              <input type="submit" value="Post Comment" class="button">
                        </form>
                    </div>
            </div>
       {% endblock %}